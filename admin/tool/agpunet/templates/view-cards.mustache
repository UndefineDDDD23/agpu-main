{{!
    @template tool_agpunet/view-cards

    This template renders the cards view for the agpuNet tool.

    Example context (json):
    {
        "courses": [
            {
                "name": "Assignment due 1",
                "viewurl": "https://agpusite/course/view.php?id=2",
                "courseimage": "https://agpusite/pluginfile/123/course/overviewfiles/123.jpg",
                "fullname": "course 3",
                "coursecategory": "Category 1",
                "visible": true
            }
        ]
    }
}}

{{< core_course/coursecards }}
    {{$coursename}}
        <span class="multiline">
            {{#shortentext}}50, {{{fullname}}} {{/shortentext}}
        </span>
    {{/coursename}}
    {{$coursecategory}}
        <span class="sr-only">
            {{#str}}aria:coursecategory, core_course{{/str}}
        </span>
        <span class="categoryname text-truncate">
            {{{coursecategory}}}
        </span>
    {{/coursecategory}}
    {{$divider}}
        <div class="px-1">|</div>
    {{/divider}}
{{/ core_course/coursecards }}
