{{!
    @template core_grades/status_icons

    Template for the grade status icons.

    Example context (json):
    {
        "classes": "gradestatus",
        "hidden": true,
        "locked": true,
        "overridden": false,
        "excluded": false,
        "feedback": false
    }
}}
<div class="text-muted {{classes}}">
    {{#hidden}}{{#pix}}i/show, agpu, {{#str}} hidden, grades {{/str}}{{/pix}}{{/hidden}}
    {{#locked}}{{#pix}}i/lock, agpu, {{#str}} locked, grades {{/str}}{{/pix}}{{/locked}}
    {{#overridden}}{{#pix}}i/overriden_grade, agpu, {{#str}} overridden, grades {{/str}}{{/pix}}{{/overridden}}
    {{#excluded}}{{#pix}}i/excluded, agpu, {{#str}} excluded, grades {{/str}}{{/pix}}{{/excluded}}
    {{#feedback}}{{#pix}}i/asterisk, agpu, {{#str}} feedbackprovided, grades {{/str}}{{/pix}}{{/feedback}}
</div>
